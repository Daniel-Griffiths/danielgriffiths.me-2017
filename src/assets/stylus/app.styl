@import url('https://fonts.googleapis.com/css?family=Lato:100,400');
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');

/*
|---------------------------------------
| Variables
|---------------------------------------
*/

// colors
$brand-primary = #4A148C
$brand-text-secondary = rgba(255,255,255,0.7)

// buttons
$btn-primary-color = $brand-primary

// grid
$gutter = 0 2em

/*
|---------------------------------------
| Core
|---------------------------------------
*/

*
  box-sizing border-box

body,html
  min-height 100%
  margin 0
  padding 0
  
body
  display flex
  flex-wrap wrap
  color #757575
  font-size 18px
  flex-flow column nowrap
  font-family 'Roboto', sans-serif
  
/*
|---------------------------------------
| Grid
|---------------------------------------
*/

.container
  margin auto
  padding $gutter
  max-width 1000px 
  width 100% 
  
/*
|---------------------------------------
| Utility
|---------------------------------------
*/

.btn
    color #fff
    cursor pointer
    margin-top 1em
    font-size 0.9em
    user-select none
    text-align center
    border-radius 2px
    padding .6em 1.5em
    display inline-block
    text-decoration none
    transition  0.3s ease-in-out
    // box-shadow 0 2px 5px 0 rgba(0,0,0,0.3)
    
    &--primary
      color $btn-primary-color
      border 1px solid $btn-primary-color
      &:hover
        background $btn-primary-color
        color #fff
      
    &--success
      color #5cb85c
      border 1px solid #5cb85c
      &:hover
        background #5cb85c
        color #fff
      
    &--info
      color #5bc0de
      border 1px solid #5bc0de
      &:hover
        background #5bc0de
        color #fff
      
    &--warning
      color #f0ad4e
      border 1px solid #f0ad4e
      &:hover
        background #f0ad4e
        color #fff
      
    &--danger
      color #d9534f
      border 1px solid #d9534f
      &:hover
        background #d9534f
        color #fff
    
    &:hover
      background opacity 0.7

.logo
    color: #fff;
    font-size: 1.7em;
    line-height: 1.3em;
    text-align: center;
    width: 1.5em;
    height: 1.5em;
    border: 5px solid #fff;
    margin-top: 0.2em;
      
/*
|---------------------------------------
| Navigation
|---------------------------------------
*/

.nav
  top 0
  left 0
  z-index 10 
  width 100%
  padding 1em
  position fixed
  box-shadow 0 0 10px 0 rgba(0,0,0,0.1)
  border-bottom 1px solid rgba(255, 255, 255, .2)
  transition .3s ease
  
  &--active
    background $brand-primary
  
  &__inner
    width 100%
    display flex
    justify-content flex-end
    list-style none
    flex-flow row wrap
  
  &__link
    display block    
    padding 0 1em
    padding-top 3px
    line-height 3em
    transition .3s ease
    text-decoration none
    text-align center
    color inherit   

    &--active
      color rgba(255,255,255,1)
    
  &__item
    color $brand-text-secondary
    
    &:first-child
      margin-right auto
      
    &:after
        content ""
        width 0
        opacity 0
        height 5px
        width 5px
        border-radius 50%
        margin auto
        display block
        transition .3s ease
        background rgba(255,255,255,0.6)
        transform translateY(-20px)
        
    &:hover
      color rgba(255,255,255,1)
    
      &:after
        opacity 1
        transform translateY(0)
    &--active
      color rgba(255,255,255,1)
      
    &--active:after
        opacity 1
        transform translateY(0)
    
/*
|---------------------------------------
| Hero *puts on cape*
|---------------------------------------
*/ 

.hero
  height calc(100vh)
  display flex
  background #ccc 
  position relative
  align-items center
  background url('http://res.cloudinary.com/daniel-griffiths/image/upload/v1505500600/IMG_20170827_181308647_HDR_vrkxbm.jpg') #212121;
  background-size cover
  background-position center center
  background-attachment fixed
  box-shadow 0 0 10px 0px rgba(0,0,0,0.2) inset;
  
  &__title
    margin 0
    color $brand-text-secondary    
    width 100%
    font-size 3em
    font-weight 100
    text-align center
    font-family lato, sans-serif
    text-transform uppercase
    letter-spacing 0.2em
    animation fadeIn 1s
    animation-fill-mode forwards
    
.scroll-chevron
  position absolute
  bottom 40px
  left 0
  right 0
  margin auto
  width 50px
  height 50px
  display block
  text-decoration none
  transition all 0.3s ease
  cursor pointer
  z-index 2

  &:hover
    animation bounce 1s infinite
      
/*
|---------------------------------------
| Body
|---------------------------------------
*/

.main
  flex-grow 1
  background #F1F1F1
  padding-top 2em
  
.article
    padding 2em
    margin auto
    background #fff
    margin-bottom 2em
    box-shadow 0 0 10px 0px rgba(0,0,0,0.1)
    
.article__title
  margin-top 0
  font-weight initial

/*
|---------------------------------------
| Particles!
|---------------------------------------
*/

#particles
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity .5
  //background linear-gradient(135deg,#2b1a73,#751b73)
  background linear-gradient(to right,rgba(166,0,217,.7),rgba(0,196,255,.7))
  
/*
|---------------------------------------
| Footer
|---------------------------------------
*/      

.footer
  width 100%
  padding 3em 0
  background #212121
  align-self flex-end
  color $brand-text-secondary
  
/*
|---------------------------------------
| Animations
|---------------------------------------
*/

@keyframes fadeIn
  from
    opacity 0
    transform translateY(5%)
  to
    opacity 1 
    transform translateY(0%)
    
@keyframes bounce
	0%, 20%, 50%, 80%, 100%
		transform: translateY(0)
	40%
		transform: translateY(-15px)
	60%
		transform: translateY(-5px)     
  
/*
|---------------------------------------
| Responsive
|---------------------------------------
*/    

@media (max-width 800px)
  .nav
    &__item:not(:first-child)
      display none
      
  .hero
    &__title
      font-size 2em