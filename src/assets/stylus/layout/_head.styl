.nav
  top 0
  left 0
  z-index 10 
  width 100%
  padding 1em
  position fixed
  box-shadow 0 0 10px 0 rgba(0,0,0,0.1)
  border-bottom 1px solid rgba(255, 255, 255, .2)
  transition .3s ease
  
  &--active
    background $brand-primary
  
  &__inner
    width 100%
    display flex
    justify-content flex-end
    list-style none
    flex-flow row wrap
  
  &__link
    display block    
    padding 0 1em
    padding-top 3px
    line-height 3em
    transition .3s ease
    text-decoration none
    text-align center
    color inherit   

    &--active
      color rgba(255,255,255,1)
    
  &__item
    color $brand-text-secondary
    
    &:first-child
      margin-right auto
      
    &:not(:first-child):after
        content ""
        width 0
        opacity 0
        height 5px
        width 5px
        border-radius 50%
        margin auto
        display block
        transition .3s ease
        background rgba(255,255,255,0.6)
        transform translateY(-20px)
        
    &:hover
      color rgba(255,255,255,1)
    
      &:after
        opacity 1
        transform translateY(0)
        
    &--active
      color rgba(255,255,255,1)
      
    &--active:after
        opacity 1
        transform translateY(0)
        
.logo
    color #fff
    font-size 1.7em
    line-height 1.3em
    text-align center
    width 1.5em
    height 1.5em
    border 5px solid #fff
    margin-top 0.2em        